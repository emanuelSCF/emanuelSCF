#include <ESP8266WiFi.h>
#include <BlynkSimpleEsp8266.h>
#include <DHT.h>

#define DHTPIN 2          // Pin donde est치 conectado el sensor DHT11
#define DHTTYPE DHT11     // Tipo de sensor DHT

char auth[] = "TuAuthToken"; // Reemplaza con tu token de autenticaci칩n Blynk
char ssid[] = "TuSSID";     // Nombre de tu red WiFi
char pass[] = "TuContrase침a"; // Contrase침a de tu red WiFi

DHT dht(DHTPIN, DHTTYPE);

void setup() {
  Serial.begin(115200);
  Blynk.begin(auth, ssid, pass);
  dht.begin();
}

void loop() {
  Blynk.run();

  float temperature = dht.readTemperature();
  float humidity = dht.readHumidity();

  Blynk.virtualWrite(V1, temperature); // Enviar temperatura a tarjeta maestra
  Blynk.virtualWrite(V2, humidity);    // Enviar humedad a tarjeta maestra

  delay(10000); // Esperar 10 segundos antes de enviar nuevamente los datos
}
